{
  "extends": ["eslint:recommended", "prettier"],
  "ignorePatterns": ["server.js", "**/config/*.js"],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "commonjs": true,
    "es6": true,
    "browser": true,
    "node": true
  },
  "rules": {
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }]
  }
}
