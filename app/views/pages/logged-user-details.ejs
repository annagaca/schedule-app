<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
  <%- include('../partials/header'); %>
</header>

<main>
  <section class="box-form">
    <section>
      <h2 class="page-title">New schedule</h2>
    </section>
    <form action="" method="post">
      <div class="label-box">
          <label for="day">Day</label>
          <div for="day"></div>
      </div>
      <input type="text" id="day" name="day" maxlength="30" required><br>
      <div class="label-box">
          <label for="start_at">Start_at</label>
          <div for="start_at"></div>
      </div>
      <input type="start_at" id="start_at" name="start_at" required><br>
      <div class="label-box">
          <label for="end_at">End_at</label>
          <div for="end_at"></div>
          <input type="text" id="end_at" name="end_at" required><br>
      </div>
      <div class="form-btn">
          <input type="submit" class="btn btn-submit" value="Submit"></input>
      </div>
  </form>
  <section class="back-to-main">
    <a href="http://localhost:3000" id="back-link">Back to main page</a>
  </section>


  <section class="container-table">
    <h2><%= userDetails[0]["first_name"] %> <%= userDetails[0]["last_name"] %><br><%= userDetails[0]["email"] %></h2>
    <table class="table-center">
      <thead>
        <tr>
          <th scope="col">Day</th>
          <th scope="col">Start at</th>
          <th scope="col">End at</th>
          <th scope="col">Work time</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% userDetails.forEach(function(event) { %>
        <tr>
          <td><%- event.day %></td>
          <td><%- event.start_at %></td>
          <td><%- event.end_at %></td>
          <td><%- event.hour %>h <%- event.minute %>min</td>
          <td>
            <form action="/delete/schedule/<%= event.id %>" class="delete-button" method="post">
              <input type="submit" class="btn" id="btn-delete" value="Delete"></input>
        </form>
        </tr>
        <% }); %>
      </tbody>
    </table>
    <section class="back-to-main">
      <a href="http://localhost:3000/new/schedule"><button type="button" class="btn btn-submit">Add date</button></a>
      <br>
      <a href="http://localhost:3000" id="back-link">Back to main page</a>
    </section>
  </section>
</main>




<footer>
  <%- include('../partials/footer'); %>
</footer>
</body>
</html>